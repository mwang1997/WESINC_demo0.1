<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mark.wesinc_demo01.WESINC_numpad"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:layout_width="232dp"
        android:layout_height="36dp"
        android:gravity = "center"
        android:text="Number of Items x Price of Item"
        android:id="@+id/textView"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/text_totalPayment"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/text_totalPayment"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/text_totalPayment"
        app:layout_constraintHorizontal_bias="0.517" />

    <Button
        android:id="@+id/button9"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button8"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <Button
        android:id="@+id/button7"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="7"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button6"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="6"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="-1dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button4"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="4"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/button7" />


    <Button
        android:id="@+id/button3"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button2"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button1"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button0"
        android:layout_width="116dp"
        android:layout_height="36dp"
        android:text="0"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button_decimal"
        android:layout_width="58dp"
        android:layout_height="36dp"
        android:text="."
        app:layout_constraintLeft_toRightOf="@+id/button0"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:text="Delete"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_x"
        android:layout_width="58dp"
        android:layout_height="72dp"
        android:text="X"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_delete"
        android:layout_marginRight="-1dp"
        app:layout_constraintRight_toRightOf="@+id/textView" />

    <Button
        android:id="@+id/button_payment"
        android:layout_width="232dp"
        android:layout_height="36dp"
        android:text="Add $X to Total"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_decimal" />

    <TextView
        android:id="@+id/text_totalPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.082"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.489" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="296dp"
        android:orientation="vertical" />

</android.support.constraint.ConstraintLayout>
