<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#CC2233"
    tools:context="com.example.mark.wesinc_demo01.WESINC_checkout">

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Waiting for      customer to tap their NFC device to the console ..."
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/textView_total_payment_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="91dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_description" />

    <TextView
        android:id="@+id/total_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_total_payment_checkout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_cancel_checkout"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="Cancel Transaction"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/standard_grey_button"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_description"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/editsale_button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Edit Sale"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:visibility="gone"
        android:background="@drawable/standard_grey_button"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_description"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/tryagain_button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Try Again"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:visibility="gone"
        android:background="@drawable/checkout_button1_numpad"
        app:layout_constraintTop_toTopOf="@+id/editsale_button"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/editsale_button"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>
