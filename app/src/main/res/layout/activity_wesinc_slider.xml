<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#CC2233"
    tools:context="com.example.mark.wesinc_demo01.WESINC_slider">

    <TextView
        android:id="@+id/textView_header"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:gravity = "center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/listView_transactionSummary"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/listView_transactionSummary"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/listView_transactionSummary"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/button_checkout"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:text="Checkout"
        android:textColor="#ffffff"
        android:background="@drawable/checkout_button1_numpad"
        app:layout_constraintLeft_toRightOf="@+id/button_additem"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/button_additem"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/button_additem"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:text="Add Item"
        android:textColor="#ffffff"
        android:background="@drawable/standard_grey_button"
        android:layout_marginTop="-9dp"
        app:layout_constraintTop_toBottomOf="@+id/listView_transactionSummary"
        android:layout_marginLeft="-6dp"
        app:layout_constraintLeft_toLeftOf="@+id/listView_transactionSummary" />

    <ListView
        android:id="@+id/listView_transactionSummary"
        android:layout_width="340dp"
        android:layout_height="250dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679" />

    <TextView
        android:id="@+id/total_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity = "center"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_header"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_header"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView_header" />

    <TextView
        android:id="@+id/text_transactionSummray"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:text="Transaction Summary"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="32dp"
        android:gravity = "center"
        android:background="@drawable/input_textview_numpad"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/listView_transactionSummary" />

</android.support.constraint.ConstraintLayout>
