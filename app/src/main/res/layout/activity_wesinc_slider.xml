<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mark.wesinc_demo01.WESINC_slider">

    <ListView
        android:layout_width="337dp"
        android:layout_height="351dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintVertical_bias="1.0"
        android:id="@+id/listView_transactionSummary" />

    <TextView
        android:id="@+id/textView_header"
        android:layout_width="337dp"
        android:layout_height="62dp"
        android:gravity = "center"
        android:text="Transaction Summary"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/listView_transactionSummary"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/listView_transactionSummary"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/listView_transactionSummary"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
