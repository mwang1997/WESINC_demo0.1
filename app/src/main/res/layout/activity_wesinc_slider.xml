<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mark.wesinc_demo01.WESINC_slider">

    <TextView
        android:id="@+id/textView_header"
        android:layout_width="337dp"
        android:layout_height="62dp"
        android:gravity = "center"
        android:text="Transaction Summary"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/listView_transactionSummary"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/listView_transactionSummary"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/listView_transactionSummary"
        app:layout_constraintHorizontal_bias="1.0" />

    <ListView
        android:id="@+id/listView_transactionSummary"
        android:layout_width="337dp"
        android:layout_height="351dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529" />

    <Button
        android:id="@+id/button_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        app:layout_constraintRight_toLeftOf="@+id/button_additem"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/listView_transactionSummary" />

    <Button
        android:id="@+id/button_additem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/listView_transactionSummary"
        android:layout_marginRight="100dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
